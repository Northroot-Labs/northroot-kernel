{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://northroot.dev/schemas/events/v1/authorization_event.schema.json",
    "title": "Northroot AuthorizationEvent (v1)",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "event_id",
        "v"
    ],
    "properties": {
        "event_id": {
            "description": "sha256('northroot:event:v1\\0' || canonical_bytes(v))",
            "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/EventID"
        },
        "v": {
            "$ref": "#/$defs/AuthorizationV"
        },
        "o": {
            "$ref": "#/$defs/OpsMeta"
        }
    },
    "$defs": {
        "OpsMeta": {
            "title": "OpsMeta",
            "description": "Operational metadata (non-normative). MUST NOT be hashed and MUST NOT be used for policy/enforcement decisions.",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "request_id": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 128,
                    "pattern": "^[A-Za-z0-9._:-]+$"
                },
                "traceparent": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 512
                },
                "provider_ref": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 256
                },
                "retry_count": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 1000000
                },
                "tags": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 64,
                        "pattern": "^[A-Za-z0-9._:-]+$"
                    },
                    "maxItems": 32,
                    "uniqueItems": true
                }
            }
        },
        "Decision": {
            "type": "string",
            "enum": [
                "allow",
                "deny"
            ]
        },
        "CheckResult": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "check",
                "result"
            ],
            "properties": {
                "check": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 64,
                    "pattern": "^[a-z][a-z0-9_.-]*$"
                },
                "result": {
                    "type": "string",
                    "enum": [
                        "pass",
                        "fail"
                    ]
                },
                "code": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 64,
                    "pattern": "^[A-Z0-9_]+$"
                }
            }
        },
        "OutputMode": {
            "type": "string",
            "enum": [
                "digest_only",
                "allow_inline",
                "allow_contentref"
            ]
        },
        "Meter": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "unit",
                "amount"
            ],
            "properties": {
                "unit": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 64,
                    "pattern": "^[a-z][a-z0-9_.-]*$"
                },
                "amount": {
                    "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/Quantity"
                }
            }
        },
        "ResourceRef": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "kind",
                "reference"
            ],
            "properties": {
                "kind": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 64,
                    "pattern": "^[a-z][a-z0-9_.-]*$"
                },
                "reference": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 512
                }
            }
        },
        "IntentAnchors": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "intent_digest"
            ],
            "properties": {
                "intent_digest": {
                    "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/Digest"
                },
                "intent_ref": {
                    "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/ContentRef"
                },
                "user_intent_digest": {
                    "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/Digest"
                }
            }
        },
        "GrantBounds": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "allowed_tools",
                "meter_caps"
            ],
            "properties": {
                "expires_at": {
                    "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/Timestamp"
                },
                "allowed_tools": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 64
                    },
                    "minItems": 1,
                    "maxItems": 256
                },
                "meter_caps": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/Meter"
                    },
                    "maxItems": 64
                },
                "rate_limits": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/Meter"
                    },
                    "maxItems": 32
                },
                "concurrency_limit": {
                    "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/Quantity"
                },
                "output_mode": {
                    "$ref": "#/$defs/OutputMode"
                },
                "resources": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/ResourceRef"
                    },
                    "maxItems": 128
                }
            }
        },
        "ActionBounds": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "tool_name",
                "tool_params_digest"
            ],
            "properties": {
                "tool_name": {
                    "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/ToolName"
                },
                "tool_params_digest": {
                    "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/Digest"
                },
                "meter_reservation": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/Meter"
                    },
                    "maxItems": 32
                }
            }
        },
        "AuthorizationKind": {
            "oneOf": [
                {
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                        "kind",
                        "bounds"
                    ],
                    "properties": {
                        "kind": {
                            "const": "grant"
                        },
                        "bounds": {
                            "$ref": "#/$defs/GrantBounds"
                        }
                    }
                },
                {
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                        "kind",
                        "action"
                    ],
                    "properties": {
                        "kind": {
                            "const": "action"
                        },
                        "grant_event_id": {
                            "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/EventID"
                        },
                        "action": {
                            "$ref": "#/$defs/ActionBounds"
                        }
                    }
                }
            ]
        },
        "AuthorizationV": {
            "title": "AuthorizationEvent.V",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "event_type",
                "event_version",
                "occurred_at",
                "principal_id",
                "canonical_profile_id",
                "intents",
                "policy_id",
                "policy_digest",
                "decision",
                "decision_code",
                "authorization"
            ],
            "properties": {
                "event_type": {
                    "const": "authorization"
                },
                "event_version": {
                    "const": "1"
                },
                "prev_event_id": {
                    "description": "Optional hash-chain pointer to prior event_id for append-only integrity.",
                    "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/EventID"
                },
                "occurred_at": {
                    "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/Timestamp"
                },
                "principal_id": {
                    "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/PrincipalID"
                },
                "canonical_profile_id": {
                    "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/ProfileID"
                },
                "intents": {
                    "$ref": "#/$defs/IntentAnchors"
                },
                "policy_id": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 128
                },
                "policy_digest": {
                    "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/Digest"
                },
                "decision": {
                    "$ref": "#/$defs/Decision"
                },
                "decision_code": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 64,
                    "pattern": "^[A-Z0-9_]+$"
                },
                "checks": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/CheckResult"
                    },
                    "maxItems": 64
                },
                "hygiene": {
                    "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/HygieneReport"
                },
                "authorization": {
                    "$ref": "#/$defs/AuthorizationKind"
                }
            }
        }
    }
}