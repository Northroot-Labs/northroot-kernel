{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://northroot.dev/schemas/events/v1/reconciliation_event.schema.json",
    "title": "Northroot ReconciliationEvent (v1)",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "event_id",
        "event_type",
        "event_version",
        "occurred_at",
        "principal_id",
        "canonical_profile_id",
        "reconciliation_type",
        "period",
        "status",
        "result_digest"
    ],
    "properties": {
        "event_id": {
            "description": "sha256('northroot:event:v1\\0' || canonical_bytes(self))",
            "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/EventID"
        },
        "event_type": {
            "const": "reconciliation"
        },
        "event_version": {
            "const": "1"
        },
        "prev_event_id": {
            "description": "Optional hash-chain pointer to prior event_id for append-only integrity.",
            "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/EventID"
        },
        "occurred_at": {
            "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/Timestamp"
        },
        "principal_id": {
            "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/PrincipalID"
        },
        "canonical_profile_id": {
            "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/ProfileID"
        },
        "reconciliation_type": {
            "description": "Type identifier for the reconciliation (e.g., 'stripe.balance', 'shopify.orders').",
            "type": "string",
            "minLength": 1,
            "maxLength": 128,
            "pattern": "^[a-z][a-z0-9_.]+$"
        },
        "period": {
            "$ref": "#/$defs/ReconciliationPeriod"
        },
        "status": {
            "description": "Overall reconciliation status.",
            "$ref": "#/$defs/ReconciliationStatus"
        },
        "result_digest": {
            "description": "Digest of the reconciliation result payload (canonical JSON).",
            "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/Digest"
        },
        "result_ref": {
            "description": "Optional content-addressed reference to full result payload.",
            "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/ContentRef"
        }
    },
    "$defs": {
        "ReconciliationPeriod": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "start",
                "end"
            ],
            "properties": {
                "start": {
                    "description": "Start of reconciliation period (ISO 8601 timestamp).",
                    "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/Timestamp"
                },
                "end": {
                    "description": "End of reconciliation period (ISO 8601 timestamp).",
                    "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/Timestamp"
                }
            }
        },
        "ReconciliationStatus": {
            "type": "string",
            "enum": [
                "ok",
                "needs_attention",
                "unresolved"
            ]
        }
    }
}

