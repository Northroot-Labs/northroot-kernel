{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://northroot.dev/schemas/events/v1/reconciliation_acceptance_event.schema.json",
    "title": "Northroot ReconciliationAcceptanceEvent (v1)",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "event_id",
        "event_type",
        "event_version",
        "occurred_at",
        "principal_id",
        "canonical_profile_id",
        "reconciliation_event_id",
        "acceptance_type"
    ],
    "properties": {
        "event_id": {
            "description": "sha256('northroot:event:v1\\0' || canonical_bytes(self))",
            "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/EventID"
        },
        "event_type": {
            "const": "reconciliation_acceptance"
        },
        "event_version": {
            "const": "1"
        },
        "prev_event_id": {
            "description": "Optional hash-chain pointer to prior event_id for append-only integrity.",
            "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/EventID"
        },
        "occurred_at": {
            "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/Timestamp"
        },
        "principal_id": {
            "description": "Principal accepting/rejecting the reconciliation.",
            "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/PrincipalID"
        },
        "canonical_profile_id": {
            "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/ProfileID"
        },
        "reconciliation_event_id": {
            "description": "Event ID of the reconciliation being accepted/rejected.",
            "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/EventID"
        },
        "acceptance_type": {
            "description": "Type of acceptance decision.",
            "$ref": "#/$defs/AcceptanceType"
        },
        "reason_code": {
            "description": "Optional stable reason code for the decision.",
            "type": "string",
            "minLength": 1,
            "maxLength": 64,
            "pattern": "^[A-Z0-9_]+$"
        },
        "notes": {
            "description": "Optional human-readable notes (max 4096 chars).",
            "type": "string",
            "maxLength": 4096
        }
    },
    "$defs": {
        "AcceptanceType": {
            "type": "string",
            "enum": [
                "accepted",
                "rejected",
                "deferred"
            ]
        }
    }
}

