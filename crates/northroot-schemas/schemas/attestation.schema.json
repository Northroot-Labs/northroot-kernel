{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://northroot.dev/schemas/events/v1/attestation_event.schema.json",
    "title": "Northroot AttestationEvent (v1)",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "event_id",
        "event_type",
        "event_version",
        "occurred_at",
        "principal_id",
        "canonical_profile_id",
        "checkpoint_event_id",
        "signatures"
    ],
    "properties": {
        "event_id": {
            "description": "sha256('northroot:event:v1\\0' || canonical_bytes(self))",
            "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/EventID"
        },
        "event_type": {
            "const": "attestation"
        },
        "event_version": {
            "const": "1"
        },
        "prev_event_id": {
            "description": "Optional pointer for chaining attestations too.",
            "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/EventID"
        },
        "occurred_at": {
            "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/Timestamp"
        },
        "principal_id": {
            "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/PrincipalID"
        },
        "canonical_profile_id": {
            "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/ProfileID"
        },
        "checkpoint_event_id": {
            "description": "event_id of the checkpoint being attested (signature binds to the checkpoint via its id).",
            "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/EventID"
        },
        "signatures": {
            "description": "One or more signatures over the attested checkpoint.",
            "type": "array",
            "items": {
                "$ref": "#/$defs/Signature"
            },
            "minItems": 1,
            "maxItems": 16
        }
    },
    "$defs": {
        "Signature": {
            "title": "Signature",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "alg",
                "key_id",
                "sig"
            ],
            "properties": {
                "alg": {
                    "description": "Signature algorithm identifier (e.g., ed25519, ecdsa-p256-sha256).",
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 64
                },
                "key_id": {
                    "description": "Key identifier (e.g., DID, KMS key ARN, x509 thumbprint, etc.).",
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 256
                },
                "sig": {
                    "description": "Signature bytes (base64url-no-pad).",
                    "type": "string",
                    "minLength": 16,
                    "maxLength": 4096,
                    "pattern": "^[A-Za-z0-9_-]+$"
                }
            }
        }
    }
}